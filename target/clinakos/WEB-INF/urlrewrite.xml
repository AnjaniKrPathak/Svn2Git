<?xml version="1.0" encoding="utf-8"?>

<!-- Added By Yash To Redircet the page According to ROle After successful 
	Login -->

<!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 3.3//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite3.3.dtd">

<urlrewrite>

	<rule>
		<note>
			The rule means that requests to /test/status/ will be redirected
			to
			/rewrite-status
			the url will be rewritten.
		</note>
	</rule>

	<rule>
		<condition type="user-in-role">ROLE_SUPER</condition>
		<from>/login_success</from>
		<to type="redirect">/jsf/superAdmin/superAdminDashboard.jsf</to>
	</rule>

	<rule>
		<condition type="user-in-role">ROLE_ADMIN </condition>
		<from>/login_success</from>
		<to type="redirect">/jsf/organisation/orgDashboard.jsf</to>
	</rule>
	<rule>
		<condition type="user-in-role">ROLE_MANAGER</condition>
		<from>/login_success</from>
		<to type="redirect">/jsf/manager/manDashboard.jsf</to>
	</rule>

	<rule>
		<condition type="user-in-role">ROLE_EMPLOYEE</condition>
		<from>/login_success</from>
		<to type="redirect">/jsf/employee/empDashboard.jsf</to>
	</rule>

	<rule>
		<condition type="user-in-role">ROLE_HR</condition>
		<from>/login_success</from>
		<to type="redirect">/jsf/hr/hrDashboard.jsf</to>
	</rule>



</urlrewrite>